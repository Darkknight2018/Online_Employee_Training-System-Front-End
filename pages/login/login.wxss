.up{
display:flex;
flex-direction: column;  
z-index:10;
height : 800rpx;
width : 800rpx;
align-items: center;
}

.firstline{
margin-left: 50rpx;
font-weight: 30rpx;
font-size: 50rpx;
font-family: "宋体";
color:#000000
}
 
.inputView {
margin-top: 100rpx;
background-color: #fff;
line-height: 44px;
width: 380px;
}

.inputVu {
background-color: #fff;
line-height: 44px;
width: 380px;
position: relative;
}
.selectView {
margin-top: 20px;
}
 
/*输入框*/
.nameImage, .keyImage {
margin-left: 10px;
width: 15px;
height: 15px
}
 
.loginLab {
margin: 15px 15px 15px 40px;
color: #1a1b19;
font-size: 14px
}
 
.inputText {
flex: block;
float: right;
text-align: center;
margin-right: 100px;
margin-top: 11px;
color: #cccccc;
font-size: 14px
}
 
.line {
width: 100%;
height: 1px;
background-color: #cccccc;
margin-top: 1px;
}
 
/*按钮*/
.loginBtnView {
width: 100%;
height: auto;
margin-top: 0px;
margin-bottom: 0px;
padding-bottom: 0px;
}
 
.loginBtn {
width: 80%;
margin-top: 35px;
}

.registr{
  margin-top: 20rpx;
  text-align: center;
  text-decoration-line:underline; 
  }

.forgetpasswd{
  margin-top: 10rpx;
  text-align: center;
  text-decoration-line:underline;  
}

.background{
  display:flex;
  width: 100%;
  height:100%;
  /*绝对位置，不会受父元素中其他元素的影响*/
  position: absolute;
  /*层叠属性,与up中的相应属性相对应*/
  z-index:1;
}
  

